@model IEnumerable<Product>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Amount</th>
    </tr>
    @foreach (Product product in Model)
    {
<tr>
    <td>@product.Id</td>
    <td>@product.Name</td>
    <td>@product.Description </td>
    <td>@product.Amount </td>
    <td>
        <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@product.Id">Edit</a>
    </td>
    <td>
        <a asp-controller="Product" asp-action="EraseProduct" asp-route-id="@product.Id">Delete</a>
    </td>

</tr>
    }

</table>
